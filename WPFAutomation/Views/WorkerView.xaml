<UserControl x:Class="WPFAutomation.Views.WorkerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAutomation.ViewModel"
        Loaded="OnWindowLoaded"
        mc:Ignorable="d">

    <UserControl.DataContext>
        <local:WorkerViewModel />
    </UserControl.DataContext>
    <Grid Margin="5,5,5,5">
        <Grid Name="ParentGridDataTable">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" >
                <ToolBarTray >
                    <ToolBar>
                        <Button Click="AddPersonButton">
                            <StackPanel>
                                <TextBlock Text="Add Person"/>
                            </StackPanel>
                        </Button>
                        <Button Click="DeletePersonButton">
                            <StackPanel>
                                <TextBlock Text="Delete Person"/>
                            </StackPanel>
                        </Button>
                    </ToolBar>
                </ToolBarTray>
            </GroupBox>
            <DataGrid Grid.Row="1" Name="EditableDataGrid" HorizontalAlignment="Left" VerticalAlignment="Stretch" 
                      Width="710" Margin="0,0,0,58"
                      ItemsSource="{Binding PersonList}"
                      EnableRowVirtualization="True"
                      AutoGenerateColumns="False"
                      CanUserSortColumns="False" >
                <DataGrid.Columns>
                    
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}"  />
                    <DataGridTextColumn Header="First name" Binding="{Binding FirstName}" />
                    <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" />
                    <DataGridTextColumn Header="Date of birth" Binding="{Binding DateOfBirth}" />
                    <!--<DataGridTextColumn Header="Height" Binding="{Binding Height}"/>
                    <DataGridTextColumn Header="Weight" Binding="{Binding Weight}"/>
                    <DataGridTextColumn Header="Sex" Binding="{Binding Sex}"/>
                    <DataGridTextColumn Header="Race" Binding="{Binding Race}"/>
                    <DataGridTextColumn Header="Nationality" Binding="{Binding Nationality}"/>
                    <DataGridTextColumn Header="Profession" Binding="{Binding Profession}"/>-->
                </DataGrid.Columns>
            </DataGrid>
            <!--<DataGrid ItemsSource="{Binding PersonList}" AutoGenerateColumns="True">
                
            </DataGrid>-->
        </Grid>
        <Button x:Name="ReadExcelButton" Content="Load Excel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Margin="425,373,0,0"  Click="ReadExcelButton_Click"/>
        <TextBox Text="{Binding SelectedFileNamePath}"   HorizontalAlignment="Left" Height="23" Margin="90,370,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="327"  />
        <Label Content="File name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,367,0,0"/>
        <Label Content="Sheet:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,394,0,0"/>
        <ComboBox HorizontalAlignment="Left" Margin="90,398,0,0" VerticalAlignment="Top" Width="140" AutomationProperties.Name="ComboBoxSheet"/>
        <Button x:Name="SaveExcelButton" Content="Save to Excel " HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Margin="570,373,0,0"  Click="SaveExcelButton_Click"/>
        <Button Content="Upload Database" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Margin="425,400,0,0"  Opacity="0.3"/>
        <Button x:Name="UpdateDatabaseButton" Content="Update Database" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Margin="570,400,0,0"  Opacity="0.3" Click="UpdateDatabaseButton_Click"/>
    </Grid>

</UserControl>
